                                       class="nav-link side-link-admin">
                                        <i class="bi bi-book-half sidebar-img-admin me-2"></i>
                                        <lable class="label-admin-side d-none d-sm-inline d-lg-inline">Story</lable>
                                    </a>
                                </li>
                                <li class="nav-item mt-2 left-sidebar-btn-admin ps-2">
                                    <a asp-action="AdminCms"
                                       asp-controller="Admin"
                                       class="nav-link side-link-admin">
                                        <i class="bi bi-border-style sidebar-img-admin me-2"></i>
                                        <lable class="label-admin-side d-none d-sm-inline d-lg-inline">Banner Management</lable>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- OFF CANVAS -->
                    <div class="admin-img-user">
                        <div class="dropdown">
                            <button class="dropdown-toggle drop-admin-btn"
                                    type="button"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                <img src="~/images/volunteer3.png"
                                     alt=""
                                     class="circleimg-admin" />
                                NAme NAme
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li>
                                    <a class="dropdown-item" href="#">Something else here</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="container mt-4">
                    <h3 class="admin-title-top">User</h3>
                    <hr class="admin-title-line" />
                    <div class="add-btn-div">
                        <button class="add-btn-admin ps-2 pe-2">
                            <i class="bi bi-plus me-1"></i><span>Add</span>
                        </button>
                    </div>
                    <div class="table-admin-div-user mt-2">
                        <table class="table table-bordered" id="myTable">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">First Name</th>
                                    <th scope="col">Last Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Employee Id</th>
                                    <th scope="col">Department</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var i in Model.userdetails)
                                {
                                    <tr>
                                        <td scope="row">@i.FirstName</td>
                                        <td>@i.LastName</td>
                                        <td>@i.Email</td>
                                        <td>@i.EmployeeId</td>
                                        <td>@i.Department</td>
                                        @if(i.Status == 1)
                                        {
                                            <td style="color: #14C506;">Active</td>
                                        }
                                        else
                                        {
                                            <td>Inactive</td>
                                        }

                                        <td><i id="@i.UserId"class="bi bi-pencil-square color-saffron" data-bs-toggle="modal" data-bs-target="#UserModal" onclick="loadUserDetailsModal(this.id)"></i><i class="bi bi-trash ms-2"></i></td>
                                    </tr>
                                }

