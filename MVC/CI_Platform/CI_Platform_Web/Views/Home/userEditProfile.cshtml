<script>

    function changePassword() {
        var oldPassword = $("#oldPassword").val()
        var newPassword = $("#newPassword").val()
        var confirmNewPassword = $("#confirmNewPassword").val()
        console.log(newPassword);
        console.log(confirmNewPassword);

        $.ajax({
            url: '/Home/changePassword',
            data: {
                oldPassword: oldPassword,
                newPassword: newPassword,
                confirmNewPassword: confirmNewPassword,
            },
            success: function (data) {
                console.log(data);
                if (data == 1) {
                    // alert("success");
                    $('#oldPassword').val("");
                    $('#newPassword').val("");
                    $('#confirmNewPassword').val("");
                    Swal.fire({
                        position: 'top-end',
                        icon: 'success',
                        title: 'PASSWORD CHANGED',
                        showConfirmButton: false,
                        timer: 2000
                    });
                }
                else {
                    $('.toast').toast('show');
                    $('#oldPassword').append('<span class="text-danger">WROMG</span>')
                    // alert("ERROR");
                    var errormsg = "";
                    if (data == -2) {
                        errormsg = "ANY OF FIELDS CAN NOT BE BLANK"
                    }

                    if (data == -1) {
                        errormsg = "NEW PASS WORD AND CONFIRM PASSWORD DOES NOT MATCH"
                    }

                    if (data == 0) {
                        errormsg = "OLD PASSWORD DOES NOT MATCH"
                    }
                    Swal.fire({
                        position: 'top-end',
                        icon: 'error',
                        title: errormsg,
                        showConfirmButton: false,
                        timer: 3000
                    });

                }
            }
        });
    }

    function imageClicked() {
        console.log("CAlled");
        $('#imgupload').click();


        //var file1= $('#imgupload').files;
        //console.log(file1);
    }

</script>
</html>