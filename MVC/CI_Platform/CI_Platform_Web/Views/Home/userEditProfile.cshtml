@{
    Layout = "_LayoutSingleHeader";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/userEditProfile.css">
    <title>Edit Profile</title>
</head>
<body>

    <!-- Image Section -->

    <div class="container mt-5">
        <div class="row">

            <div class="col-md-3 col-sm-12">
                <div class="userImageDiv">
                    <img src="~/images/user-img-large.png" alt="User Image" class="userImg mt-3">
                    <p class="mb-0" style="font-size: 20px;">Evan Donohue</p>
                    <a href="#" class="changePassword mb-2">Change Password</a>
                </div>
            </div>

            <div class="col-md-9 col-sm-12 infomationDiv">

                <form action="">
                    <div class="container">
                        <h3 class="innerTitle">Basic Information</h3>
                        <hr>

                        <div class="row">
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="Name" class="form-label" style="color: #414141;">Name*</label>
                                <input type="text" class="form-control" placeholder="Enter your name" value="">
                            </div>
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="Surname" class="form-label" style="color: #414141;">Surname*</label>
                                <input type="text" class="form-control" placeholder="Enter your surname" value="">
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="empID" class="form-label" style="color: #414141;">Employee ID</label>
                                <input type="text" class="form-control" placeholder="Enter your employee id" value="">
                            </div>

                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="managerDetails" class="form-label" style="color: #414141;">Manager</label>
                                <input type="text" class="form-control" placeholder="Enter your manager details"
                                       value="">
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="title" class="form-label" style="color: #414141;">Title</label>
                                <input type="text" class="form-control" placeholder="Enter your title" value="">
                            </div>

                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="department" class="form-label" style="color: #414141;">Department</label>
                                <input type="text" class="form-control" placeholder="Enter your department" value="">
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col-12">
                                <label for="" class="form-label" style="color: #414141;">My Profile*</label>
                                <textarea name="" id="" rows="5" class="" placeholder=" Enter your comments..."
                                          style="width: 100%;"></textarea>
                            </div>
                            <div class="col-12 mt-2">
                                <label for="" class="form-label" style="color: #414141;">Why I Volunteer?*</label>
                                <textarea name="" id="" rows="5" class="" placeholder=" Enter your comments..."
                                          style="width: 100%;"></textarea>
                            </div>
                        </div>

                    </div>

                    <div class="container mt-5">
                        <h3 class="innerTitle">Address Information</h3>
                        <hr />
                        <div class="row">
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="" class="form-label">City*</label>
                                <input type="text" class="form-control" placeholder="Enter Your Name" value="" />
                            </div>
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="" class="form-label">Country*</label>
                                <input type="text" class="form-control" placeholder="Enter Your Surname" value="" />
                            </div>
                        </div>
                    </div>

                    <div class="container mt-5">
                        <h3 class="innerTitle">Professional Information</h3>
                        <hr />
                        <div class="row">
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="" class="form-label">Availability</label>
                                <input type="text" class="form-control" placeholder="Enter Your Name" value="" />
                            </div>
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="" class="form-label">Linked In</label>
                                <input type="text" class="form-control" placeholder="Enter Your Surname" value="" />
                            </div>
                        </div>
                    </div>

                    <div class="container mt-5">
                        <h3 class="innerTitle">My Skills</h3>
                        <hr />
                        <div class="skillDiv mb-3">
                            <ul>
                                <li>Anthropology</li>
                                <li>Archeology</li>
                                <li>Astronomy</li>
                                <li>Computer Science</li>
                                <li>Environmental Science</li>
                                <li>History</li>
                            </ul>
                        </div>

                        <button type="button" class="addSkillsBtn" data-bs-toggle="modal"
                                data-bs-target="#modalAddSkills">
                            Add Skills
                        </button>

                        <!-- Modal Start-->
                        <div class="modal fade" id="modalAddSkills" data-bs-backdrop="static" data-bs-keyboard="false"
                             tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog modal-xl modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="staticBackdropLabel">Add your Skills</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row justify-content-center">
                                            <div class="col-5">
                                                <select size="32" class="form-select" multiple>
                                                    <option value="1">Anthropology</option>
                                                </select>
                                            </div>
                                            <div class="col-1 d-flex justify-content-center align-items-center">
                                                <div class="row text-center">
                                                    <i class="bi bi-caret-right-fill fs-4"></i>
                                                    <i class="bi bi-caret-left-fill fs-4"></i>
                                                </div>
                                            </div>
                                            <div class="col-5">
                                                <select size="32" class="form-select">
                                                    <option value="1">Anthropology</option>
                                                    <option value="4">Environmental</option>
                                                    <option value="4">History</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="modalBtnClose"
                                                data-bs-dismiss="modal">
                                            Cancel
                                        </button>
                                        <button type="button" class="modalBtnSave">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- MODAL END -->

                    </div>

                    <div class="container saveBtnDiv">
                        <button class="saveBtn">Save</button>
                    </div>
                </form>

            </div>

        </div>
    </div>
    <hr>

</body>
</html>