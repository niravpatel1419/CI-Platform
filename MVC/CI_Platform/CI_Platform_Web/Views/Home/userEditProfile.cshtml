@{
    Layout = "_LayoutSingleHeader";
}

@model CI_Platform_Web.Entities.ViewModel.UserDetailsViewModel;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/userEditProfile.css">
    <title>Edit Profile</title>
</head>
<body>

    <!-- Image Section -->

    <div class="container mt-5">
        <div class="row">

            <div class="col-md-3 col-sm-12">
                <div class="userImageDiv">
                    <img src="~/images/user-img-large.png" alt="User Image" class="userImg mt-3">
                    <p class="mb-0" style="font-size: 20px;">@Model.users.FirstName @Model.users.LastName</p>
                    <a href="#" class="changePassword mb-2" data-bs-toggle="modal" data-bs-target="#modalChangePassword">Change Password</a>

                    @*MODAL START*@
                    <div class="modal fade" id="modalChangePassword" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog">

                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="staticBackdropLabel">
                                        Change Password
                                    </h5>
                                    <button type="button"
                                            class="btn-close"
                                            data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                </div>

                                <div class="modal-body">
                                    <span class="text-danger">@ViewData["Error"]</span> 
                                    <div class="my-2 px-3 pb-3">
                                        <input asp-for="oldPassword" id="oldPassword" type="text" class="form-control" placeholder="Enter Old password" />
                                        <span asp-validation-for="oldPassword" class="text-danger"></span>
                                    </div>
                                    <div class="my-2 px-3 pb-3">
                                        <input asp-for="newPassword" id="newPassword" type="text" class="form-control" placeholder="Enter New password" />   
                                        <span asp-validation-for="newPassword" class="text-danger"></span>
                                    </div>
                                    <div class="my-2 px-3 pb-3">
                                        <input asp-for="confirmNewPassword" id="confirmNewPassword" type="text" class="form-control" placeholder="Enter Confirm password" />
                                        <span asp-validation-for="confirmNewPassword" class="text-danger"></span>
                                    </div>
                                    <span class="text-danger">@ViewData["PasswordNotMatch"]</span>
                                </div>

                                <div class="modal-footer d-flex">
                                    <button type="button" class="addSkillsbtnmodal" data-bs-dismiss="modal">
                                        Cancel
                                    </button>
                                    <button type="" class="savebtnmodal" onclick="changePassword()">
                                        Change Password
                                    </button>
                                </div>

                            </div>

                        </div>
                    </div>
                    @*MODAL END*@
                </div>
            </div>


    <!--Information Section-->
            <div class="col-md-9 col-sm-12 infomationDiv">

                <form asp-controller="Home" asp-action="userEditProfile" method="post">
                    <div class="container">
                        <h3 class="innerTitle">Basic Information</h3>
                        <hr>

                        <div class="row">
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="Name" class="form-label" style="color: #414141;">Name*</label>
                                <input asp-for="users.FirstName" type="text" class="form-control" placeholder="Enter Your Name" value="@Model.users.FirstName" />
                            </div>
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="Surname" class="form-label" style="color: #414141;">Surname*</label>
                                <input asp-for="users.LastName" type="text" class="form-control" placeholder="Enter Your Surname" value="@Model.users.LastName" />
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="empID" class="form-label" style="color: #414141;">Employee ID</label>
                                <input asp-for="users.EmployeeId" type="text" class="form-control" placeholder="Enter Your Employee ID" value="@Model.users.EmployeeId" />
                            </div>

                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="managerDetails" class="form-label" style="color: #414141;">Manager</label>
                                <input asp-for="users.Manager" type="text" class="form-control" placeholder="Enter Your Manager" value="@Model.users.Manager" />
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="title" class="form-label" style="color: #414141;">Title</label>
                                <input asp-for="users.Title" type="text" class="form-control" placeholder="Enter Your Title" value="@Model.users.Title" />
                            </div>

                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="department" class="form-label" style="color: #414141;">Department</label>
                                <input asp-for="users.Department" type="text" class="form-control" placeholder="Enter Your Department" value="@Model.users.Department" />
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col-12">
                                <label asp-for="users.ProfileText" class="form-label" style="color: #414141;">My Profile*</label>
                                <textarea name="ProfileText" id="" rows="5" class="" placeholder=" Enter your comments..."
                                          style="width: 100%;">@Model.users.ProfileText</textarea>
                            </div>
                            <div class="col-12 mt-2">
                                <label asp-for="users.WhyIVolunteer" class="form-label" style="color: #414141;">Why I Volunteer?*</label>
                                <textarea name="WhyIVolunteer" id="" rows="5" class="" placeholder=" Enter your comments..."
                                          style="width: 100%;">@Model.users.WhyIVolunteer</textarea>
                            </div>
                        </div>

                    </div>

                    <div class="container mt-5">
                        <h3 class="innerTitle">Address Information</h3>
                        <hr />
                        <div class="row">
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="" class="form-label">Country*</label>
                                <select asp-for="users.CountryId" class="form-select" id="Country" onclick="GetCountry()" aria-label="Default select example">
                                    <option selected>Select Your Country</option>
                                </select>
                                @*<input type="text" class="form-control" placeholder="Enter Your Name" value="" />*@
                            </div>
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="" class="form-label">City*</label>
                                <select asp-for="users.CityId" class="form-select" id="City" aria-label="Default select example">
                                    <option selected>Select Your City</option>
                                </select>
                                @*<input type="text" class="form-control" placeholder="Enter Your Surname" value="" />*@
                            </div>
                        </div>
                    </div>

                    <div class="container mt-5">
                        <h3 class="innerTitle">Professional Information</h3>
                        <hr />
                        <div class="row">
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="" class="form-label">Availability</label>
                                <select asp-for="users.Availability" class="form-select" aria-label="Default select example">
                                    <option selected>Select Your Availability</option>
                                    <option value="daily">Daily</option>
                                    <option value="weekly">Weekly</option>
                                    <option value="monthly">Monthly</option>
                                    <option value="yearly">Yearly</option>
                                </select>
                                @*<input type="text" class="form-control" placeholder="Enter Your Name" value="" />*@
                            </div>
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <label for="" class="form-label">Linked In</label>
                                <input asp-for="users.LinkedInUrl" type="text" class="form-control" placeholder="Enter Your LinkedIn" value="@Model.users.LinkedInUrl" />
                            </div>
                        </div>
                    </div>

                    <div class="container mt-5">
                        <h3 class="innerTitle">My Skills</h3>
                        <hr />
                        <div class="skillDiv mb-3">
                            <ul>
                                <li>Anthropology</li>
                                <li>Archeology</li>
                                <li>Astronomy</li>
                                <li>Computer Science</li>
                                <li>Environmental Science</li>
                                <li>History</li>
                            </ul>
                        </div>

                        <button type="button" class="addSkillsBtn" data-bs-toggle="modal"
                                data-bs-target="#modalAddSkills">
                            Add Skills
                        </button>

                        <!-- Modal Start-->
                        <div class="modal fade" id="modalAddSkills" data-bs-backdrop="static" data-bs-keyboard="false"
                             tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog modal-xl modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="staticBackdropLabel">Add your Skills</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row justify-content-center">
                                            <div class="col-5">
                                                <select size="32" class="form-select" multiple>
                                                    <option value="1">Anthropology</option>
                                                </select>
                                            </div>
                                            <div class="col-1 d-flex justify-content-center align-items-center">
                                                <div class="row text-center">
                                                    <i class="bi bi-caret-right-fill fs-4"></i>
                                                    <i class="bi bi-caret-left-fill fs-4"></i>
                                                </div>
                                            </div>
                                            <div class="col-5">
                                                <select size="32" class="form-select">
                                                    <option value="1">Anthropology</option>
                                                    <option value="4">Environmental</option>
                                                    <option value="4">History</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="modalBtnClose"
                                                data-bs-dismiss="modal">
                                            Cancel
                                        </button>
                                        <button type="button" class="modalBtnSave">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- MODAL END -->

                    </div>

                    <div class="container saveBtnDiv">
                        <button type="submit" class="saveBtn">Save</button>
                    </div>
                </form>

            </div>

        </div>
    </div>
    <hr>

</body>
<script src="~/js/countrycity.js"></script>
<script>

    function changePassword(){
        var oldPassword = $("#oldPassword").val()
        var newPassword = $("#newPassword").val()
        var confirmNewPassword = $("#confirmNewPassword").val()
        console.log(newPassword);
        console.log(confirmNewPassword);

        $.ajax({
            url: '/Home/changePassword',
            data:{
                oldPassword:oldPassword,
                newPassword:newPassword,
                confirmNewPassword:confirmNewPassword,
            },
            success: function (data){
                if(data == true){
                    alert("hum jit gaye");
                }
                else{
                    alert("Error error");
                }
            }
        });
    }

</script>
</html>