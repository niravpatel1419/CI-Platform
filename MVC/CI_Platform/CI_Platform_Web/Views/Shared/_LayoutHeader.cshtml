                        <button class="btn btn-secondary dropdown-toggle btnCustom" type="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            Country
                        </button>

                        <ul class="dropdown-menu" style="height:250px; width:max-content; overflow-y:scroll;">

                            <!-- for country data in drop down -->
                            @if (ViewBag.Country != null)
                            {
                                @foreach (var category in ViewBag.Country)
                                {
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="form-check">
                                                <input class="form-check-input checkbox" type="checkbox" onchange="updateUrlCountry()" value="@category.Name" id=@category.CountryId name="country" />
                                                <label class="form-check-label" for="Checkme1">@category.Name</label>
                                            </div>
                                        </a>
