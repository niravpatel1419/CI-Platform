                            Theme
                        </button>

                        <ul class="dropdown-menu" style="height:250px; overflow-y:auto ; overflow-x:hidden">

                            <!--for theme data in drop down-->
                            @if (ViewBag.MissionThemes != null)
                            {
                                @foreach (var category in ViewBag.MissionThemes)
                                {
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="form-check">
                                                <input class="form-check-input checkbox" type="checkbox" onchange="updateUrlTheme()" value="@category.Title" id=@category.MissionThemeId name="theme" />
