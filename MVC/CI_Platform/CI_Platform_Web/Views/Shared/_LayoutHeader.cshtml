                        <ul class="dropdown-menu" style="height:250px; width:max-content; overflow-y:auto; overflow-x:hidden">

                            <!-- for city data in drop down -->
                            @if (ViewBag.City != null)
                            {
                                @foreach (var category in ViewBag.City)
                                {
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="form-check">
                                                <input class="form-check-input checkbox" type="checkbox" onchange="updateUrlCities()" value="@category.Name" id=@category.CityId name="city" />
                                                <label class="form-check-label" for="Checkme1">@category.Name</label>
