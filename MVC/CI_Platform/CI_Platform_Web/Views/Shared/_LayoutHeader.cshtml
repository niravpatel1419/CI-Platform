        <!-- Searching And Filter Header In PC/Tab -->

        <div class="container">
            <div class="row">

                <div class="col-6 d-flex align-items-center">

                    <img src="~/images/search.png" alt="Search" class="searchIcon">

                    <nav class="navbar">
                        <div class="container">
                            <form class="d-flex" role="search">
                                <input class="form-control me-2" id="search-bar" name="searchQuery" value="@ViewBag.searchQuery" type="text" placeholder="Search mission..." aria-label="Search">
                            </form>
                        </div>
                    </nav>

                </div>



                <div class="  col-6 d-flex align-items-center">

                    <!--Country Dropdown-->
