                    <!--Theme Dropdown-->
                    <div class="dropdown col-3 filterNav">
                        <button class="btn btn-secondary dropdown-toggle btnCustom"
                                type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Theme
                        </button>

                        <ul class="dropdown-menu" style="height:250px; overflow-y:auto ; overflow-x:hidden" id="themeList" onchange="anyChange()">

                            <!--for theme data in drop down-->
                            @if (ViewBag.MissionThemes != null)
                            {
                                @foreach (var category in ViewBag.MissionThemes)
                                {
                                    <li>
                                        <a class="dropdown-item" href="#">

                                            <input class="form-check-input checkbox" id="" type="checkbox" value="@category.Title" id=@category.Title name="theme" />
                                            @category.Title

                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>

                    <!--Skill Dropdown-->
                    <div class="dropdown col-3 filterNav">
                        <button class="btn btn-secondary dropdown-toggle btnCustom"
                                type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Skill
                        </button>

                        <ul class="dropdown-menu" style="height:250px; overflow-y:auto ; overflow-x:hidden" onchange="anyChange()">

                            <!--for skill data in drop down-->
                            @if (ViewBag.Skills != null)
                            {
                                @foreach (var category in ViewBag.Skills)
                                {
                                    <li>
                                        <a class="dropdown-item" href="#">

                                            <input class="form-check-input checkbox" id="" type="checkbox" value="@category.Title" id=@category.Title name="theme" />
                                            @category.Title

                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>

                </div>



            </div>

        </div>

        <hr class="line mt-0">

        <!-- Mission Filter Btn -->
        <div class="container">

            <div class="row">
                <div class="filterSection d-flex align-items-center flex-wrap justify-content-center">
                </div>
            </div>

        </div>



        @RenderBody()

    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/filter.js" asp-append-version="true"></script>
    <script>


        //For the Hamburger navbar

        const menu = document.querySelector(".menu");
        const menuItems = document.querySelectorAll(".menuItem");
        const hamburger = document.querySelector(".hamburger");
        const closeIcon = document.querySelector(".closeIcon");
        const menuIcon = document.querySelector(".menuIcon");

        function toggleMenu() {
            if (menu.classList.contains("showMenu")) {
                menu.classList.remove("showMenu");
                closeIcon.style.display = "none";
                menuIcon.style.display = "block";
            } else {
                menu.classList.add("showMenu");
                closeIcon.style.display = "block";
                menuIcon.style.display = "none";
            }
        }

        hamburger.addEventListener("click", toggleMenu);






        // For the Grid View And List View

        gridList();
        if (localStorage.getItem("view") === "list") {
            showList(); 
        }

        function showList() {
            localStorage.setItem("view", "list");
            var $gridCont = $('.grid-container');
            // e.preventDefault();
            $gridCont.hasClass('list-view') ? $gridCont.removeClass('list-view') : $gridCont.addClass('list-view');
        }
        function gridList() {
            localStorage.setItem("view", "grid");
            var $gridCont = $('.grid-container')
            //  e.preventDefault();
            $gridCont.removeClass('list-view');
        }

        $(document).on('click', '.btn-grid', gridList);
        $(document).on('click', '.btn-list', showList);




        //For Filtering AJAX Script

        $(document).ready(function () {

        });

       // anyChange()
        function anyChange(id) {
            console.log(id);
            console.log("anychange called");
            var country = [];

            var searchQuery = $('#search-bar').val();
            console.log(searchQuery)



            $('#countryList').find("input:checked").each(function (i, v) {
                country.push($(v).val())

            });
            var city = [];
            $('#cityList').find("input:checked").each(function (i, v) {
                city.push($(v).val())

            });
            var theme = [];
            $('#themeList').find("input:checked").each(function (i, v) {
                theme.push($(v).val())

            });
            $.ajax({
                type: 'post',
                url: '/Home/home',

                data: {
                    "countryList": country,
                    "cityList": city,
                    "themeList": theme,
                    "searchQuery": searchQuery,
                    "sortId":id
                },
                success: function (data) {
                    var a = $($.parseHTML(data)).find("#myItems").html();
                    //console.log(data);
                    $('.item').html(a);
                    var b = $($.parseHTML(data)).find("#titalmissionTitle").html();
                    $('.titalmissionTitle').html(b);

                    //var c = $($.parseHTML(data)).find("#paginationNav").html();
                    //$('.paginationNav').html(c);
                    // paginationNav
                    //titalmissionTitle
                    //$('.bodyy').html(data);
                    console.log("success");

                },
                error: function (error) {
                    console.log(error);
                }

            });


        }

    </script>
    @await RenderSectionAsync("Scripts", required: false)


</body>

</html>